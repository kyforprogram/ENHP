<% post.post_comments.each do |post_comment| %>
<div class="media">
  <%= link_to user_path(post_comment.user) do %>
  <%= attachment_image_tag post_comment.user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40', class:"mr-3" %><br>
  <p class="text-center"><%= post_comment.user.name %></p>
  <% end %>
  <div class="media-body">
    <%= post_comment.comment %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: :true, class: "btn btn-outline-danger fas fa-trash-alt" %>
    <% end %>
  </div>
</div>
<% end %>
