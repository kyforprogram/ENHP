<div class="container">
  <h2>
    ユーザー一覧
  </h2>
  <div class="card-deck m-auto">
    <% @users.each do |user| %>
      <div class="col-3">
        <div class="card font-italic text-center mt-3">
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "20x200", class:"card-img-top rounded-circle" %>
          <% end %>
            <%= user.name %><br>
            <%= user.company %>
          <div id="follow_btn_<%= user.id %>">
            <%= render 'users/users/follow-btn', user: user %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="mt-3">
      <%= paginate @users %>
    </div>
  </div>
</div>
