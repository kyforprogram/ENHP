<div class="container">
ユーザー一覧
  <div class="row">
    <div class="col">
    <% @users.each do |user| %>
      <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png" %>
        <%= user.name %>
      <% end %>
      <div id="follow_btn_<%= user.id %>">
        <%= render 'users/users/follow-btn', user: user %>
      </div>
      <%= user.introduction %>
      <%= user.job_category %>
    <% end %>
    </div>
  </div>
</div>