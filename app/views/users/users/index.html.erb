<div class="container">
  <h2>
    ユーザー一覧
  </h2>
  <% @users.each do |user| %>
  <div class="card-deck" style="width:18rem">
    <div class="card">
    <%= link_to user_path(user.id) do %>
      <%= attachment_image_tag user, :profile_image, fallback: "noimage.png", class:"card-img-top" %>
    <% end %>
      <p>
        <%= user.name %>
      </p>
      <p>
        <%= user.introduction %>
      </p>
      <div id="follow_btn_<%= user.id %>">
        <%= render 'users/users/follow-btn', user: user %>
      </div>
    <% end %>
    </div>
  </div>
</div>
