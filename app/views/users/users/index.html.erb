<div class="container">
  <h2>
    ユーザー一覧
  </h2>
  <div class="card-deck mt-3">
  <% @users.each do |user| %>
    <div class="col-3">
      <div class="card text-center">
      <%= link_to user_path(user.id) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "noimage.png", class:"card-img-top" %>
      <% end %>
      <p>
        <%= user.name %>
      </p>
      <p>
        <%= user.company %>
      </p>
      <div id="follow_btn_<%= user.id %>">
        <%= render 'users/users/follow-btn', user: user %>
      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
