<div class="container">
<% if @user == current_user %>
  <h2>マイページ</h2>
<% else %>
  <h2><%= @user.name %>さんのページ</h2>
<% end %>
  <div class="row">
    <div class="col-4">
      <div>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size:'200x200' %><br>
        <%= @user.name %>
      </div>
      <div>
        <%= link_to followings_user_path(@user) do %>
          <span id="follow_count"> フォロー：<%= @user.followings.count %></span>
        <% end %>
        <%= link_to followers_user_path(@user) do %>
          <span id="follower_count">フォロワー：<%= @user.followers.count %></span>
        <% end %>
        <div id="follow_btn_<%= @user.id %>">
          <%= render 'users/users/follow-btn', user: @user %>
        </div>
      </div>
      <%= @user.introduction %>
      <% if @user.id == current_user.id %>
        <%= link_to '編集', edit_user_path(@user) %>
      <% end %>
      <% if @user != current_user %>
        <%= link_to "メッセージルーム", direct_message_path(@user) %>
      <% end %>
    </div>
  </div>
</div>