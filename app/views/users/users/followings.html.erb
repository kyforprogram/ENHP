<div class="container mt-5 mb-5">
  <h2>
    フォロー一覧
  </h2>
  <div class="card-deck mt-3">
  <% @users.each do |user| %>
    <div class="col-3">
      <div class="card text-center">
      <%= link_to user_path(user.id) do %>
       <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "90x90", class:" rounded-circle" %>
      <% end %>
        <%= user.name %><br>
        <%= user.company %>
      <div id="follow_btn_<%= user.id %>">
        <%= render 'users/users/follow-btn', user: user %>
      </div>
      </div>
    </div>
  <% end %>
  </div>
  <div class="mt-3">
    <%= paginate @users %>
  </div>
</div>

