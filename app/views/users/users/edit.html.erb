<div class="container top-bg">

  <div class="mt-5">
    <span class="fs-3  offset-md-1 bg-light page-title">会員情報編集</span>
  </div>

    <%= form_with model:@user, local:true do |f| %>
    <div class="form-group">
    <%= f.label :プロフィール画像, class:"col-2 mt-3" %>
    <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "noimage.png", size:'200x200'%>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
    <div class="form-group">
    <%= f.label :表示名, class:"col-2 mt-3" %>
    <%= f.text_field :name, class:"offset-1 col-3" %>
    </div>
    <div class="form-group">
    <%= f.label :自己紹介, class:"col-2 mt-3" %>
    <%= f.text_area :introduction,class:"offset-1 col-3" %>
    </div>
    <%= f.submit %>
    <% end %>

</div>
