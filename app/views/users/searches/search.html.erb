<%= params[:word] %>

<% if @category == '1' %>
  <% @user.each do |user| %>
  <%= link_to user_path(user.id) do %>
  <%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "noimage.png", size:'200x200' %>
  <%= user.name %>
  <% end %>
  <%= user.introduction %>
  <% end %>
<% end %>


<% if @category == '2' %>
  <% @post.each do |post| %>
  <%= attachment_image_tag post, :image, :fill, 80, 80, fallback: "noimage.png", size:'200x200' %>
  <%= post.title %>
  <%= post.introduction %>
  <% end %>
<% end %>

