<div class="container  mb-5 mt-5 top-bg">
  <div class="mt-5">
    <span class="fs-3 fst-italic offset-lg-1 bg-light signup-form">新規会員登録</span>
  </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="row mt-3 offset-lg-1">
          <%= f.label :名前, class:"col-lg-3 offset-1 offset-sm-0" %>
          <%= f.text_field :name, class:"col-lg-3 col-10 offset-1 offset-sm-0", autofocus: true, placeholder:"令和太郎" %>
        </div>
        <div class="row mt-3 offset-lg-1">
          <%= f.label :メールアドレス, class:"col-lg-3 offset-1 offset-sm-0" %>
          <%= f.email_field :email, class:"col-lg-3 col-10 offset-1 offset-sm-0", autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>
        <div class="row mt-3 offset-lg-1">
          <%= f.label :パスワード（6文字以上）, class:"col-lg-3 offset-1 offset-sm-0" %>
          <%= f.password_field :password, class:"col-lg-2 col-10 offset-1 offset-sm-0", autocomplete: "new-password" %>
        </div>
        <div class="row mt-3 offset-lg-1">
          <%= f.label :パスワード（確認用）, class:"col-lg-3 offset-1 offset-sm-0" %>
          <%= f.password_field :password_confirmation, class:"col-lg-2 col-10 offset-1 offset-sm-0", autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-primary offset-4 offset-lg-4 mt-4" %>
        </div>
      <% end %>

      <div class="mt-5">
        <span class="fs-3 fst-italic offset-lg-1 bg-light">既に登録済の方</span>
      </div>

      <div class="offset-1 mt-3 mb-4">
        <%= link_to "こちら", new_user_session_path, class: "signin-link" %>　からログインしてください.
      </div>
</div>