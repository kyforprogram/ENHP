<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-12">
      <h2>#<%= @tag.hashname %></h2>
      <div class="card-deck">
        <% @posts.each do |post| %>
          <div class="col-6 mt-1">
            <div class="card border-info">
                <div class="card-header bg-transparent border-info">
                  <h5 class="card-title"><%= post.title.truncate(70) %></h5>
                </div>
                  <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, fallback: "noimage.png", class:"card-img-top" %>
                  <% end %>
                  <div class="card-body text-center">
                  <%= attachment_image_tag post.user, :profile_image, :fill, 90, 90, fallback: "noimage.png", size:'90x90', class:"rounded-circle" %>
                  <%= post.user.name %>
                  <span id="likes_<%= post.id %>"><%= render "users/likes/likes", post: post %></span>
                  <small><%= post.created_at.strftime("%Y.%m.%d %H.%M") %></small>
                  </div>
                </div>
             </div>
        <% end %>
      </div>
      <div class="mt-3">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
