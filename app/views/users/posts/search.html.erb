<div data-turbolinks='false'>
  <div class="container">
    <div class="row">
      <div calss="col-3">
      <div class="item-categories">
      <h2>
        カテゴリー一覧
      </h2>
      <%= link_to  top_posts_path, class: "category-button", id: 'categoBtn' do %>
        カテゴリーから探す
      <% end %>
      <div id="tree_menu">
        <ul class="categoryTree">
          <% @parents.each do |parent| %>
            <li class="category_parent">
              <%= link_to search_post_path(parent), 'data-turbolinks': false do %>
                <input type="button" value="<%= parent.name %>" name="<%= parent.id %>" class="parent_btn">
              <% end %>
            </li>
          <% end %>
        </ul>
        <ul class="categoryTree-child">
        </ul>
        <ul class="categoryTree-grandchild">
        </ul>
      </div>
    </div>
    </div>
      <div class="col-9">
        <div class='item-contents'>
        <h2 class='title'><%= @category.name %></h2>
        <% if @posts.empty? %>
          <p class="none-posts">該当するクチコミが見つかりません。検索条件を変えて、再度お試しください。</p>
        <% end %>
        <% @posts.each do |post| %>
          <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :image, :fill, 60, 60, fallback: "noimage.png", size:'200x200' %>
            <%= post.title %>
          <% end %>
          <div>
          <% if post.category.nil? %>
            <p>nil</p>
          <% else %>
          </br><%= post.category.root.name %>
          </br><%= post.category.parent.name %>
          </br><%= post.category.name %>
          <% end %>
          </div>
          <div>
            <span id="likes_<%= post.id %>"><%= render "users/likes/likes", post: post %></span>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>