<div class="container">
  <div class="row">
    <div class="col">
      <p>投稿一覧画面</p>
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 60, 60, fallback: "noimage.png", size:'200x200' %>
          <%= post.title %>
        <% end %>
        <div>
        <% if post.category.nil? %>
          <p>nil</p>
        <% else %>
          </br><%= post.category.root.name %>
          </br><%= post.category.parent.name %>
          </br><%= post.category.children.name %>
        <% end %>
        </div>
        <div>
          <span id="likes_<%= post.id %>"><%= render "users/likes/likes", post: post %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>