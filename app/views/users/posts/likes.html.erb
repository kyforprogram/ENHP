<div class="container">
  <div class="row">
    <div class="col-3">
    </div>
    <div class ="cpol-8">
      <div class="card mx-auto mb-4 embed-responsive shadow-sm ">
      <% @post_likes.each do |postlike| %>
        <%= link_to post_path(postlike) do %>
          <%= attachment_image_tag postlike, :image, fallback: "noimage.png", class:"card-img-top"; %>
        <% end %>
        <h5 class="card-title"><%= postlike.title %></h5>
        <div>
          <%= render 'users/shared/post_category', post: postlike %>
        </div>
        <div>
          <span id="likes_<%= postlike.id %>"><%= render "users/likes/likes", post: postlike %></span>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

