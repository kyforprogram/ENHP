<div class="container">
  <div class="row">
    <div class="col">
      <h1>投稿詳細画面</h1>
      <%= attachment_image_tag @post, :image, :fill, 60, 60, fallback: "noimage.png" %>
      <%=@post.created_at.strftime('%Y/%m/%d') %>
      <span id="likes_<%= @post.id %>"><%= render "users/likes/likes", post: @post %></span>
      <%= @post.title %>
      <%= @post.company_name %>
      <%= @post.introduction %>
      <%= @post.assignment %>
      <%= render_with_hashtags(@post.target) %>
      <%= link_to user_path(@post.user.id) do%>
      <%= attachment_image_tag @post.user, :profile_image, :fill, 60, 60, fallback: "noimage.png" %>
      <%= @post.user.name %>
      <% end %>
      <%= @post.user.introduction %>
      <div id="post_comment_index_<%= @post.id %>">
        <%= render "users/post_comments/index", post: @post %>
      </div>
      <%= form_with model:[@post, @post_comment] do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class:"form-control" %>
          <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>